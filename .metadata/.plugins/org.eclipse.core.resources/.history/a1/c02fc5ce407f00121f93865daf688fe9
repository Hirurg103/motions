import javax.media.opengl.GL2;
import static javax.media.opengl.GL2.*;


public class Pyramid extends CustomFigure {
	// ----- Render the Pyramid -----
	public static void draw(GL2 gl, float u, float v, float h) {
		gl.glBegin(GL_QUADS); // of the pyramid
		// bottom
		gl.glVertex3f(u, 0, u);
		gl.glVertex3f(-u, 0, u);
		gl.glVertex3f(-u, 0, -u);
		gl.glVertex3f(u, 0, -u);
		
		// top
		gl.glVertex3f(v, 0, v);
		gl.glVertex3f(v, 0, -v);
		gl.glVertex3f(-v, 0, -v);
		gl.glVertex3f(-v, 0, v);
		
		// front
		gl.glVertex3f(u, 0, u);
		gl.glVertex3f(v, h, v);
		gl.glVertex3f(-v, h, v);
		gl.glVertex3f(-u, 0, u);
		
		// left
		gl.glVertex3f(u, 0, u);
		gl.glVertex3f(u, 0, -u);
		gl.glVertex3f(v, h, -v);
		gl.glVertex3f(v, h, v);
		
		//back
		gl.glVertex3f(u, 0, -u);
		gl.glVertex3f(-u, 0, -u);
		gl.glVertex3f(-v, h, -v);
		gl.glVertex3f(v, h, -v);
		
		//right
		gl.glVertex3f(-u, 0, -u);
		gl.glVertex3f(-u, 0, u);
		gl.glVertex3f(-v, h, v);
		gl.glVertex3f(-v, h, -v);
		gl.glEnd(); // of pyramig
	}
}
