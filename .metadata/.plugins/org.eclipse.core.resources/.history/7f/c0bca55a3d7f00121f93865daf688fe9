import javax.media.opengl.GL2;
import javax.media.opengl.GLAutoDrawable;
import static javax.media.opengl.GL2.*;


public class Pyramid implements CustomFigure {
	public void draw(GLAutoDrawable drawable, float u, float v, float h) { 
		GL2 gl = drawable.getGL().getGL2();
		gl.glBegin(GL_QUADS);
		
		// bottom
		gl.glVertex3f(u, 0, u);
		gl.glVertex3f(-u, 0, u);
		gl.glVertex3f(-u, 0, -u);
		gl.glVertex3f(u, 0, -u);
		
		// top
		gl.glVertex3f(v, 0, v);
		gl.glVertex3f(v, 0, -v);
		gl.glVertex3f(-v, 0, -v);
		gl.glVertex3f(-v, 0, v);
		
		// front
		gl.glVertex3f(u, 0, u);
		gl.glVertex3f(v, h, v);
		gl.glVertex3f(-v, h, v);
		gl.glVertex3f(-u, 0, u);
		
		
		gl.glEnd();
	}
}
