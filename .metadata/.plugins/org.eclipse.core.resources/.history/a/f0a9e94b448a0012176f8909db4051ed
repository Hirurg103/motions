package figures;
import javax.media.opengl.GL2;

import static javax.media.opengl.GL2.*;
import java.math.*;

public class Prism extends CustomFigure {
	private int countFaces;
	private float height;
	private float radius;
	
	public Prism(int countFaces, float height, float radius) {
		this.countFaces = countFaces;
		this.height = height;
		this.radius = radius;
	}
	
	public Prism() { this(3, 1.0f, 1.0f); }
	
	@Override
	public void draw(GL2 gl) {
		float angle = Math.PI/countFaces;
		for(int i = 0; i <= countFaces  + 1; i++) {
			gl.glBegin(GL_QUADS);
				glVertex3f(0, (float)radius*Math.cos(i*angle), (float)radius*Math.sin(i*angle));
			
		}
	}
}
