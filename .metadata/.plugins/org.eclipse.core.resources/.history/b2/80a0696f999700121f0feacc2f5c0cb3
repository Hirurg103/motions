import java.awt.event.ActionListener;

import javax.swing.BorderFactory;
import javax.swing.ImageIcon;
import javax.swing.JButton;

import org.fenggui.decorator.border.Border;

public class CreateCustomMotionAction extends JButton implements ActionListener {
	
	public CreateCustomMotionAction() {
		super("Create custom motion");
		setBorderPainted(false);
		addActionListener(this);
	}
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	@Override
	public void actionPerformed(ActionEvent arg0) {
		System.out.println("action");
	}
	
	public void setSelected() {
		setIcon(new ImageIcon("../images/".concat(getName().toLowerCase().replaceAll("\\s", "_")).concat("_selected_icon.jpeg")));
	}
	
//	public void setUnselected() {
