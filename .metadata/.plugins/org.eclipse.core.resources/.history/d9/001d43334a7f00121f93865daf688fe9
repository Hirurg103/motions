import javax.media.opengl.GL2;

public class Human extends CustomFigure {

	public static void draw(GL2 gl) {
		// -----Human bottom-----
		
		// Center of body
		Pyramid.draw(gl, 0.8f, .5f, 1.5f);
		
		// bottom of body
		gl.glTranslatef(0, -2.5f, 0);
		Pyramid.draw(gl, 1.2f, 0.3f, 2.5f);
		
		//left leg top
		gl.glTranslatef(0.5f, -2.5f, 0);
		Pyramid.draw(gl, 0.3f, 0.1f, 2.5f);
		
		//left leg bottom
		gl.glTranslatef(0, -2, 0);
		Pyramid.draw(gl, 0.4f, 0.1f, 2);
		
		gl.glTranslatef(-0.5f, 4.5f, 0);
		
		//right leg top
		gl.glTranslatef(-0.5f, -2.5f, 0);
		Pyramid.draw(gl, 0.3f, 0.1f, 2.5f);
		
		//left leg bottom
		gl.glTranslatef(0, -2, 0);
		Pyramid.draw(gl, 0.4f, 0.1f, 2);
		
		gl.glTranslatef(0.5f, 8.5f, 0);
		// -----Human top-----
		
		// top of body
		Pyramid.draw(gl, 0.5f, 1f, 1f);
		
		//left hand top
		gl.glTranslatef(1, 1, 0);
		gl.glRotatef(-150, 0, 0, 1);
		Pyramid.draw(gl, 0, 0.3f, 2f);

	}

}
